<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="90dp"
              android:text="H O S P I R U N"
              android:textStyle="bold"
              android:textColor="#fff"
              android:textSize="25sp"
              android:textAlignment="center"
    />

    <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                    android:id="@+id/solusi"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#e74c3c"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/solusi"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#c0392b"
                    >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Solusi"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textSize="17sp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/rumahsakit"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#e74c3c"
                    app:cardElevation="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/rumsakit"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#c0392b"
                    >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rumah Sakit"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textSize="17sp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                    android:id="@+id/rujukan"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#e74c3c"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/rujukan"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#c0392b"
                    >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rujukan"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textSize="17sp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/nearby"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:backgroundTint="#e74c3c"
                    app:cardElevation="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/lokasi"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#c0392b"
                    >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nearby"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textSize="17sp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>